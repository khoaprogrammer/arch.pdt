    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js" integrity="sha384-SlE991lGASHoBfWbelyBPLsUlwY1GwNDJo3jSJO04KZ33K2bwfV9YBauFfnzvynJ" crossorigin="anonymous"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-114685977-1"></script>
    <script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-114685977-1');
    </script>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
  (adsbygoogle = window.adsbygoogle || []).push({
    google_ad_client: "ca-pub-4778272217434820",
    enable_page_level_ads: true
  });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.js"></script>
    @RenderSection("HeadScripts", false)
</head>
<body>
    @Html.Partial("~/Views/Partials/_HeaderPartial.cshtml")

    @if (ViewBag.ShowTopSearch != null)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="stats">
                        <i class="fas fa-book"></i> <strong>@ViewBag.AllBookCount</strong> &nbsp; <i class="fab fa-youtube"></i> <strong>@ViewBag.AllCourseCount</strong> &nbsp; <i class="fas fa-users"></i> <strong>@ViewBag.AllUserCount</strong>
                    </div>
                </div>
                <div class="col-md-8">
                    <div id='search-box'>
                        @using (Html.BeginForm("Books", "Home", FormMethod.Get, new { id = "search-form", target = "_top" }))
                        {
                            @Html.TextBox("search", null, new { @class = "form-control mr-sm-2", type = "text", id = "search-text", placeholder = "Từ khóa ..." })
                            <button id='search-button' type='submit'>
                                <span>Tìm kiếm</span>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <hr />
    }

    <div class="container-fluid">
        @RenderBody()
    </div>
    @Html.Partial("~/Views/Partials/_FooterPartial.cshtml")
    @RenderSection("Scripts", false)

    <script src="//static.getclicky.com/js" type="text/javascript"></script>
    <script type="text/javascript">try{ clicky.init(101104421); }catch(e){}</script>
    <noscript><p><img alt="Clicky" width="1" height="1" src="//in.getclicky.com/101104421ns.gif" /></p></noscript>
    <!--Start of Tawk.to Script-->
    <script>
        if (window.canRunAds === undefined) {
            $("body").html("Xin tắt chương trình chặn quảng cáo!");
        }

        var searchContainerHeight = $("#search-box").parent().height();
        $("#search-box").css("margin-top", parseInt((searchContainerHeight / 2) - ($("#search-box").height() / 2)).toString() + "px")
    </script>
    <script type="text/javascript">
var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
(function(){
var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
s1.async=true;
s1.src='https://embed.tawk.to/5aa008e0d7591465c7085a29/default';
s1.charset='UTF-8';
s1.setAttribute('crossorigin','*');
s0.parentNode.insertBefore(s1,s0);
})();
    </script>
    <!--End of Tawk.to Script-->
    <script>
        setInterval(function () {
            $.ajax("@Url.Action("AdsFreeMonitor", "User")", {
                type: "POST"
            });
        }, 5000);
    </script>
</body>
</html>
