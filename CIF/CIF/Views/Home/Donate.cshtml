@model CIF.Models.CardDonateView

@{
    ViewBag.Title = "Donate";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section Styles {
    <link href="~/Content/donate.css" rel="stylesheet" />
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h3>THẺ ĐIỆN THOẠI</h3>
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("CardDonate", "User", FormMethod.Post))
                {
                    <div class="form-group">
                        <label class="control-label col-md-12">Nhà mạng:</label>
                        <div class="col-md-12">
                            @Html.EnumDropDownListFor(x => x.Type, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-12 ">Số Seri:</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Serial, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-12">Mã thẻ:</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.PIN, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Nạp thẻ</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <table>
                    <thead>
                        <tr>
                            <th scope="col">Mệnh giá nạp</th>
                            <th scope="col">Số CIF nhận</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>20.000 VNĐ</td>
                            <td>1000 <i class="fab fa-bitcoin"></i></td>
                        </tr>
                        <tr>
                            <td>50.000 VNĐ</td>
                            <td>2500 <i class="fab fa-bitcoin"></i></td>
                        </tr>
                        <tr>
                            <td>100.000 VNĐ</td>
                            <td>6000 <i class="fab fa-bitcoin"></i></td>
                        </tr>
                        <tr>
                            <td>200.000 VNĐ</td>
                            <td>15000 <i class="fab fa-bitcoin"></i></td>
                        </tr>
                        <tr>
                            <td>500.000 VNĐ</td>
                            <td>55000 <i class="fab fa-bitcoin"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h3>CHUYỂN KHOẢN NGÂN HÀNG</h3>
        <div class="row">
            <div class="col-md-12">
                @Html.Raw(ViewBag.BankAccounts.Data)
            </div>
        </div>
    </div>
</div>

